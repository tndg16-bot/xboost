enum ApiTier {
  FREE
  PRO
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  UNPAID
  TRIALING
  INCOMPLETE
  INCOMPLETE_EXPIRED
}

enum PlanType {
  STARTER
  PRO
  TEAM
}

model ApiKey {
  id           String   @id @default(cuid())
  key          String   @unique
  userId       String
  name         String
  tier         ApiTier  @default(FREE)
  createdAt    DateTime @default(now())
  lastUsedAt   DateTime?
  expiresAt    DateTime?
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([key])
}

model Post {
  id               String       @id @default(cuid())
  userId           String
  twitterAccountId String?
  content          String       @db.Text
  mediaUrls        String[]
  twitterPostId    String?
  status           PostStatus   @default(DRAFT)
  format           PostFormat   @default(SINGLE)
  contentType      ContentType?

  // Current metrics
  impressions      Int          @default(0)
  likes            Int          @default(0)
  retweets         Int          @default(0)
  replies          Int          @default(0)
  quotes           Int          @default(0)

  // 24-hour time-series metrics (for #59)
  impressions24h   Int          @default(0)
  likes24h         Int          @default(0)
  retweets24h      Int          @default(0)
  replies24h       Int          @default(0)
  metrics24hAt     DateTime?

  // 3-day time-series metrics (for #59)
  impressions3d    Int          @default(0)
  likes3d          Int          @default(0)
  retweets3d       Int          @default(0)
  replies3d        Int          @default(0)
  metrics3dAt      DateTime?

  // Pattern analysis fields (for #16)
  isViral          Boolean      @default(false)
  viralThreshold    Int          @default(100000)
  engagementRate   Float?
  hook             String?      @db.Text  // ÂÜíÈ†≠„ÅÆÊé¥„ÅøÔºàÊúÄÂàù„ÅÆ2-3Ë°åÔºâ
  contentLength    Int?         // ÊäïÁ®ø„ÅÆÈï∑„Åï
  characterCount   Int?         // ÊñáÂ≠óÊï∞

  publishedAt      DateTime?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  twitterAccount TwitterAccount? @relation(fields: [twitterAccountId], references: [id])

  @@index([userId])
  @@index([twitterAccountId])
  @@index([status])
  @@index([isViral])
  @@index([publishedAt])
}

model ScheduledPost {
  id               String     @id @default(cuid())
  userId           String
  twitterAccountId String?
  content          String     @db.Text
  mediaUrls        String[]
  scheduledAt      DateTime
  status           PostStatus @default(SCHEDULED)
  publishedPostId  String?
  errorMessage     String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  twitterAccount TwitterAccount? @relation(fields: [twitterAccountId], references: [id])

  @@index([userId])
  @@index([twitterAccountId])
  @@index([scheduledAt])
  @@index([status])
}

model Subscription {
  id                    String             @id @default(cuid())
  userId                String             @unique
  user                  User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Stripe fields
  stripeSubscriptionId   String             @unique
  stripeCustomerId       String
  stripePriceId        String

  // Plan & status
  planType              PlanType
  status                SubscriptionStatus

  // Billing periods
  currentPeriodStart     DateTime
  currentPeriodEnd       DateTime
  cancelAtPeriodEnd     Boolean            @default(false)
  canceledAt            DateTime?

  // Feature limits
  accountsLimit          Int                @default(1)
  automationEnabled      Boolean            @default(false)

  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt

  @@index([stripeSubscriptionId])
  @@index([stripeCustomerId])
  @@index([userId])
}

model Invoice {
  id              String    @id @default(cuid())
  stripeInvoiceId String    @unique
  userId          String
  amount          Int
  currency        String
  status          String
  hostedUrl       String?
  pdfUrl          String?

  createdAt       DateTime  @default(now())

  @@index([stripeInvoiceId])
  @@index([userId])
}
