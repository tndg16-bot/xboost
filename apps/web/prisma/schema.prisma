// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String          @id @default(cuid())
  name            String?
  email           String?         @unique
  emailVerified   DateTime?
  image           String?
  accounts        Account[]
  sessions        Session[]
  posts           Post[]
  scheduledPosts  ScheduledPost[]
  twitterAccounts TwitterAccount[]
  apiKeys         ApiKey[]
  activeAccountId String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@index([activeAccountId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum TwitterAccountRole {
  MAIN      // ðŸŽ¯ æœ¬ã‚¢ã‚«
  SUB       // ðŸ’¼ ã‚µãƒ–
  NICHE     // ðŸŽ¨ ç‰¹åŒ–
}

model TwitterAccount {
  id                String              @id @default(cuid())
  userId            String
  twitterId         String              @unique
  username          String
  displayName       String?
  profileImageUrl   String?
  accessToken       String              @db.Text
  refreshToken      String?             @db.Text
  tokenExpiresAt    DateTime?
  isActive          Boolean             @default(true)
  role              TwitterAccountRole  @default(SUB)
  color             String              @default("#3B82F6")  // Blue default
  description       String?
  order             Int                 @default(0)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts          Post[]
  scheduledPosts ScheduledPost[]

  @@index([userId])
  @@index([role])
  @@index([isActive])
}

enum PostStatus {
  DRAFT
  SCHEDULED
  PUBLISHED
  FAILED
  DELETED
}

enum ApiTier {
  FREE
  PRO
  ENTERPRISE
}

model ApiKey {
  id           String   @id @default(cuid())
  key          String   @unique
  userId       String
  name         String
  tier         ApiTier  @default(FREE)
  createdAt    DateTime @default(now())
  lastUsedAt   DateTime?
  expiresAt    DateTime?
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([key])
}

model Post {
  id               String     @id @default(cuid())
  userId           String
  twitterAccountId String?
  content          String     @db.Text
  mediaUrls        String[]
  twitterPostId    String?
  status           PostStatus @default(DRAFT)
  impressions      Int        @default(0)
  likes            Int        @default(0)
  retweets         Int        @default(0)
  replies          Int        @default(0)
  publishedAt      DateTime?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  twitterAccount TwitterAccount? @relation(fields: [twitterAccountId], references: [id])

  @@index([userId])
  @@index([twitterAccountId])
  @@index([status])
}

model ScheduledPost {
  id               String     @id @default(cuid())
  userId           String
  twitterAccountId String?
  content          String     @db.Text
  mediaUrls        String[]
  scheduledAt      DateTime
  status           PostStatus @default(SCHEDULED)
  publishedPostId  String?
  errorMessage     String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  twitterAccount TwitterAccount? @relation(fields: [twitterAccountId], references: [id])

  @@index([userId])
  @@index([twitterAccountId])
  @@index([scheduledAt])
  @@index([status])
}
